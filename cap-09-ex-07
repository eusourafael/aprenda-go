package main

import (
	"fmt"
)

func main() {
	pessoas := [][]string{
		[]string{"José", "da Silva", "futebol"},
		[]string{"Maria", "Pereira", "basquete"},
		[]string{"João", "do Carmo", "vôlei"},
	}
	for _, pessoa := range pessoas {
		fmt.Println(pessoa[0], pessoa[1], "-", pessoa[2])
	}
}

